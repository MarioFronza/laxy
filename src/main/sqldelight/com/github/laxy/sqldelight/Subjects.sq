import com.github.laxy.persistence.SubjectId;

CREATE TABLE IF NOT EXISTS subjects (
    id BIGSERIAL AS SubjectId PRIMARY KEY,
    language_id BIGSERIAL REFERENCES languages(id) ON DELETE CASCADE,
    name VARCHAR(100) NOT NULL,
    description TEXT,
    created_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP
);

CREATE INDEX idx_subject_language_id ON subjects(language_id);