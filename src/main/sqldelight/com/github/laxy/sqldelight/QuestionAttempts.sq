import com.github.laxy.persistence.QuestionAttemptId;

CREATE TABLE IF NOT EXISTS question_attempts (
    id BIGSERIAL AS QuestionAttemptId PRIMARY KEY,
    question_id BIGSERIAL REFERENCES questions(id) ON DELETE CASCADE,
    user_answer INT NOT NULL,
    is_correct INT NOT NULL,
    created_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP
);

CREATE INDEX idx_question_attempt_question_id ON question_attempts(question_id);